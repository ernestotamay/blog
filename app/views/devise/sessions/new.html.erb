<!-- Estilizamos el formulario -->
<div class="small-container center-block">
  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <!-- Agregar label en español -->
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <!-- Agregar label en español -->
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar sesión" %>
      </div>
    <% end %>

    <div class="actions">
      <!-- Estilizamos el boton -->
      <%= f.submit "Iniciar sesión", class:"btn btn-primary" %>
    </div>
  <% end %>

  <!-- Agregar label en español -->
  <%= render "devise/shared/links" %>

</div>