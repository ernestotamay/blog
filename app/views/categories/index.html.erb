<div class="large-container center-block">
<p id="notice"><%= notice %></p>

<h1>Categories</h1>
  <p>
    <%= link_to 'New Category', new_category_path %>
  </p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td>
          <span class="badge badge-pill padding" style="background-color: <%= category.color %>" >
              <%= link_to "", category, class: "text-white" %>
          </span>
        </td>
        <td><%= link_to 'Show', category %>
            <%= link_to 'Edit', edit_category_path(category) %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
